{
  "manifest_version": 2,

  "name": "Sahi Hai",
  "description": "Helps you to avoid accessing malicious websites by  analyzing the website .",
  "version": "1.1",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon_o.png",
    "48": "icon_o.png",
    "32": "icon_o.png",
    "128": "icon_o.png"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "tabs",
    "<all_urls>"
  ]
}
